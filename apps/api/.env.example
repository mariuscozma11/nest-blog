# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (use DATABASE_URL for Railway/production, or individual vars for local)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nest_blog

# JWT (use a strong secret in production, min 32 chars)
JWT_SECRET=your-super-secret-key-min-32-characters
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=*

# Rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
